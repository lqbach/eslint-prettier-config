{
  "name": "eslint-prettier-config",
  "type": "module",
  "description": "lqbach's ESLint and Prettier Configs",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "lint": "eslint .",
    "format": "prettier . --check --ignore-path .gitignore pnpm-lock.yaml",
    "format:fix": "prettier . --write --ignore-path .gitignore pnpm-lock.yaml",
    "check": "npm run lint && npm run format",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "Quan Bach <long_quan_bach@hotmail.com> (https://github.com/lqbach/)",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.9.0",
    "eslint": "^8.53.0",
    "lerna": "^7.4.2",
    "prettier": "^3.1.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "husky": "^8.0.0"
  }
}
