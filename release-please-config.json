{
  "changelog-sections": [
    { "type": "feat", "section": "Features 🚀", "hidden": false },
    { "type": "fix", "section": "Bug Fixes 🐛", "hidden": false },
    { "type": "chore", "section": "Chores 🧹", "hidden": false },
    { "type": "ci", "section": "Miscellaneous", "hidden": false },
    { "type": "docs", "section": "Documentation 📝", "hidden": false },
    { "type": "style", "section": "Miscellaneous", "hidden": false },
    { "type": "refactor", "section": "Miscellaneous", "hidden": false },
    { "type": "perf", "section": "Performance 🏃‍♂️", "hidden": false },
    { "type": "test", "section": "Tests 🧪", "hidden": false }
  ],
  "packages": {
    "packages/eslint-config": {
      "component": "eslint-config",
      "release-type": "node"
    },
    "packages/prettier-config": {
      "component": "prettier-config",
      "release-type": "node"
    }
  },
  "plugins": [
    {
      "type": "node-workspace",
      "merge": false
    },
    {
      "type": "linked-versions",
      "groupName": "ESLint Prettier Configuration",
      "components": ["eslint-config", "prettier-config"]
    }
  ]
}
